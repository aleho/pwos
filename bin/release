#!/bin/bash -e

TS=$(date +'%s')
DATE=$(date +'%Y%m%d_%H%M%S')
VARS_FILE="src/js/vars.js"
DIST="dist"


function commit_push_dist() {
    echo "Preparing and pushing release v${DATE}â€¦"

    git add yarn.lock ${DIST}/ ${VARS_FILE}
    git commit yarn.lock ${DIST}/ ${VARS_FILE} -m "Release v${DATE}"
    git tag -s v${DATE} -m "Release v${DATE}"
    git push origin --tags
    git subtree push --prefix ${DIST} origin gh-pages
}


read -p "This will release and push v${DATE}. Continue? [y,N] " -n 1 -r
echo ""
if ! [[ $REPLY =~ ^[Yy]$ ]]; then
    exit
fi

bin/build $TS
commit_push_dist
